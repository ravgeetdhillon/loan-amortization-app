{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Install Live Server",
      "type": "shell",
      "command": "npm",
      "args": ["install", "-g", "live-server"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Start Development Server",
      "type": "shell",
      "command": "live-server",
      "args": ["--port=3000", "--open=/index.html", "--watch=."],
      "group": "build",
      "isBackground": true,
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Open Loan Calculator",
      "type": "shell",
      "command": "open",
      "args": ["index.html"],
      "group": "build",
      "isBackground": false,
      "problemMatcher": []
    }
  ]
}
